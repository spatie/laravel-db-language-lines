{
    "name": "spatie/laravel-translation-loader",
    "description": "Store your language lines in the database, yaml or other sources",
    "keywords": [
        "spatie",
        "laravel",
        "laravel-translation-loader",
        "translate",
        "database",
        "db",
        "language",
        "i8n"
    ],
    "homepage": "https://github.com/spatie/laravel-translation-loader",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "illuminate/container": "~5.3.0|~5.4.0",
        "illuminate/contracts": "~5.3.0|~5.4.0",
        "illuminate/database": "~5.3.0|~5.4.0",
        "illuminate/support": "~5.3.0|~5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "orchestra/testbench":  "~3.3.0|~3.4.0",
        "orchestra/database":  "~3.3.0|~3.4.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\TranslationLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\TranslationLoader\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\TranslationLoader\\TranslationServiceProvider"
            ]
        }
    }
}
